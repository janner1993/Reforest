<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jegg.reforest.Registro"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:measureAllChildren="false"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="@dimen/width_logo_registro"
                android:layout_height="@dimen/height_logo_registro"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margintop_logo"
                android:cropToPadding="false"
                android:adjustViewBounds="false"
                />
            <EditText
                android:id="@+id/tvNombre"
                android:layout_gravity="center"
                android:layout_width="@dimen/width_contraseña"
                android:layout_height="wrap_content"
                android:textSize="@dimen/width_correo"
                android:hint="@string/texto_nombre"
                android:textColor="@color/color_de_contraseña"
                android:background="@drawable/cuadrado2"
                android:layout_marginTop="@dimen/margintop_contraseña"
                android:layout_below="@id/imgLogo"
                android:layout_centerHorizontal="true"
                android:paddingLeft="10dp"
                />
            <EditText
                android:id="@+id/tvApellidos"
                android:layout_gravity="center"
                android:layout_width="@dimen/width_contraseña"
                android:layout_height="wrap_content"
                android:textSize="@dimen/width_correo"
                android:hint="@string/texto_apellidos"
                android:textColor="@color/color_de_contraseña"
                android:background="@drawable/cuadrado2"
                android:layout_marginTop="@dimen/margintop_contraseña"
                android:layout_below="@id/tvNombre"
                android:layout_centerHorizontal="true"
                android:paddingLeft="10dp"
                />
            <EditText
                android:id="@+id/tvEmail"
                android:layout_gravity="center"
                android:layout_width="@dimen/width_contraseña"
                android:layout_height="wrap_content"
                android:textSize="@dimen/width_correo"
                android:hint="@string/texto_email"
                android:textColor="@color/color_de_contraseña"
                android:background="@drawable/cuadrado2"
                android:layout_marginTop="@dimen/margintop_contraseña"
                android:layout_below="@id/tvApellidos"
                android:layout_centerHorizontal="true"
                android:paddingLeft="10dp"
                />
            <EditText
                android:id="@+id/tvContraseña"
                android:layout_gravity="center"
                android:layout_width="@dimen/width_contraseña"
                android:layout_height="wrap_content"
                android:textSize="@dimen/width_correo"
                android:hint="@string/texto_contraseña"
                android:textColor="@color/color_de_contraseña"
                android:background="@drawable/cuadrado2"
                android:layout_marginTop="@dimen/margintop_contraseña"
                android:layout_below="@id/tvEmail"
                android:layout_centerHorizontal="true"
                android:paddingLeft="10dp"
                />
            <EditText
                android:id="@+id/tvTelefono"
                android:layout_gravity="center"
                android:layout_width="@dimen/width_contraseña"
                android:layout_height="wrap_content"
                android:textSize="@dimen/width_correo"
                android:hint="@string/texto_telefono"
                android:textColor="@color/color_de_contraseña"
                android:background="@drawable/cuadrado2"
                android:layout_marginTop="@dimen/margintop_contraseña"
                android:layout_below="@id/tvContraseña"
                android:layout_centerHorizontal="true"
                android:paddingLeft="10dp"
                />

            <Button
                android:id="@+id/btnCuenta"
                android:layout_gravity="center"
                android:layout_width="@dimen/btn_width"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/marginbottom_registro_cuenta"
                android:layout_centerHorizontal="true"
                android:text="@string/texto_crear_cuenta"
                android:textStyle="bold"
                android:paddingBottom="12dp"
                android:textSize="@dimen/btn_text_entrar"
                android:textColor="@color/btn_letra_registro"
                android:background="@drawable/cuadrado"
                android:onClick="irSegundo"
                android:layout_marginTop="30dp"

                />


        </LinearLayout>



    </ScrollView>


</RelativeLayout>
