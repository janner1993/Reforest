<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jegg.reforest.MainActivity"
    android:background="@color/fondo_pantalla"
    >
  <LinearLayout
      android:layout_width="350dp"
      android:layout_height="480dp"
      android:orientation="vertical"
     android:layout_centerHorizontal="true"
      android:layout_marginTop="20dp"
      tools:elevation="?attr/actionBarSize"
      android:background="@drawable/linear_layout_fondo"

      >

    <TextView
        android:id="@+id/tvTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_principal"
        android:textStyle="bold"
        android:textSize="@dimen/textsize_text"
        android:textColor="@color/texto"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margintop_text"
        android:layout_marginLeft="@dimen/marginleft_texto_principal"
        />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="@dimen/width_logo"
        android:layout_height="@dimen/height_logo"
        android:background="@drawable/arbolj"
        android:layout_below="@+id/tvTexto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margintop_logo"
        android:layout_gravity="center"

        />
    <Button
        android:id="@+id/btnButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/texto_boton"
        android:textStyle="bold"
        android:textColor="@color/color_acceso"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/marginbottom_acceso"
        android:onClick="irSegundaActividad"
        android:textSize="@dimen/textsize_bottom"
        android:background="@drawable/cuadrado"
        android:layout_gravity="center"
        android:layout_marginTop="33dp"
        />
  </LinearLayout>

</RelativeLayout>
